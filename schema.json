{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/CIAnalyzer config schema",
  "definitions": {
    "CIAnalyzer config schema": {
      "type": "object",
      "properties": {
        "github": {
          "type": "object",
          "properties": {
            "repos": {
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "tests": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    },
                    "required": [
                      "name"
                    ],
                    "additionalProperties": false
                  }
                ]
              }
            }
          },
          "required": [
            "repos"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "github"
      ],
      "additionalProperties": false
    }
  }
}
