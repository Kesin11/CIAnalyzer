{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>Kesin11/renovate-config:oss",
    ":prConcurrentLimit10",
    ":enableVulnerabilityAlerts",
    ":automergeMinor"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "separateMajorMinor": false,
      "extends": [
        ":automergeMajor",
        "schedule:weekends"
      ]
    },
    {
      "matchPackageNames": [
        "zod"
      ],
      "extends": [
        "schedule:monthly"
      ]
    }
  ]
}
