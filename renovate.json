{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>Kesin11/renovate-config:oss",
    ":prConcurrentLimit10",
    ":enableVulnerabilityAlerts",
    ":automergeMinor"
  ],
  "dockerfile": {
    "fileMatch": ["(^|/)Earthfile[^/]*$"]
  },
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "separateMajorMinor": false,
      "extends": [
        ":automergeMajor",
        "schedule:weekends"
      ]
    }
  ]
}
